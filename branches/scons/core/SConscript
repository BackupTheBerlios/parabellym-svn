import os
Import('env', 'fnd')

envbsd = env.Copy()
envbsd.Append(CPPDEFINES = ['PARA_BUILD_CORE', ('funs', 'funspcore')])
objs = []

for item in fnd.listFiles(['.', '../util'], r'^.*(\.cc)$'):
	fname, ext = os.path.splitext(item)
	objs.append(envbsd.SharedObject(fname + '.os', item))

envbsd.SharedLibrary('parabellym', objs)

